    <meta charset="utf-8" />
    <title>Cadastro - Teste Com Janela Modal</title>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.9.0/themes/base/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.8.2.js"></script>
    <script src="http://code.jquery.com/ui/1.9.0/jquery-ui.js"></script>
    <script>
    bgB=true;
    qtdDivs = 1;
    $(function() {
        $( "#dialog-cadastro" ).dialog({
            autoOpen: false,
            height: 300,
            width: 350,
            modal: true,
            buttons: {
                "Cadastrar": function() {
                        bgB = !bgB;
                        qtdDivs++;
                        $( this ).dialog( "close" );   
                },
                Cancel: function() {
                    $( this ).dialog( "close" );
                }
            },
            close: function() {
                allFields.val( "" ).removeClass( "ui-state-error" );
            }
        });
 
        $( "#bt-cadastra" )
            .button()
            .click(function() {
                $( "#dialog-cadastro" ).dialog( "open" );
            });
            
    });
    </script>

<h1>Cadastro</h1>
 
<div id="dialog-form" title="Cadastro de Pessoas"> 
    <form>
    <fieldset>
        <label for="contdiv">Conteudo da Div</label>
        <input type="text" name="contdiv" id="contdiv" class="text ui-widget-content ui-corner-all" />
    </fieldset>
    </form>
</div>
 
 <button id="bt-cria-div">Criar DIV</button>
 <hr>
  <table width="100%" id="table-cadastrados">
	<thead><tr>
		<th>Nome</th>
		<th>Telefone</th></tr>
	</thead>
	<tbody>
	<% @contatos.each do |contato| %>
		<tr>
			<td><%= contato.nome %></td>
			<td><%= contato.telefone %></td>		
		</tr>
	<% end %>
	</tbody>
  </table>

</body>
</html>